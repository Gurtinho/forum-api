    "jest": "^29.7.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "prettier": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.8.0",
    "typeorm": "^0.3.17",
    "uuid": "^9.0.1",
    "yargs": "^17.7.2"
