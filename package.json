    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/yargs": "^17.0.32",
    "eslint-plugin-prettier": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
